<%= content_for :header do %>
  <h1>Log In</h1>
<% end %>

<div data-role = "content">
  <%= form_tag do %>
      <fieldset>
        <p>
          <label for="username"> Username: </label>
          <%= text_field_tag :username, params[:username] %>
        </p>
        <p>
          <label for="password"> Password: </label>
          <%= password_field_tag :password, params[:password] %>
        </p>
        <p>
          <%= submit_tag "Login" %>
        </p>
      </fieldset>
  <% end %>
</div>