<% content_for :header do %>
  <h1>Utenti</h1>
<% end %>

<div data-role = "content">
  <ul data-role = "listview">
    <% @users.each do |user| %>
        <li>
          <%= link_to user.username, user, :target => '_parent' %>
          <%= link_to "Modifica utente", edit_user_path(user), 'data-icon' => 'gear' %>
        </li>
    <% end %>
  </ul>
</div>