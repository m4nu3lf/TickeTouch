<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @user.new_record? %>
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
  <% end %>
  <br />
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
    <br />
    <div class="field">
      <%= f.label "Conferma password" %>
      <%= f.password_field :password_confirmation %>
    </div>
    <br />
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Nome" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Cognome" %><br />
    <%= f.text_field :surname %>
  </div>
  <div class="field">
    <%= f.label "Indirizzo" %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label "Numero di telefono" %><br />
    <%= f.text_field :tel_number %>
  </div>
  <div class="actions">
    <% if @user.new_record? %>
        <%= f.submit "Registrati"%>
    <% else %>
        <%= f.submit "Salva modifiche"%>
    <% end %>
  </div>
<% end %>
